include common/_mixins
doctype html
html
	include common/_head
	body
		<!--[if lt IE 7]>
		<p class="browsehappy">Вы используете <strong>устаревший</strong> браузер. Пожалуйста <a href="http://browsehappy.com/">обновите его</a></p>
		<![endif]-->

		.preloader

		include common/_parallax
		header.header.header_welcome
			.container
				button.login-button Авторизоваться

		section.content.content_welcome
			.content__inner
				h1 За голову ок
				.flip-card
					.flip-card__front-side
						.author-bio
							.author-bio__avatar
								img(src="/assets/img/avatar.jpg" title="Frontend. Wordpress. Разработка сайтов под ключ." alt="Лембинен Николай")
							p.author-bio__name Лембинен Николай
							p.author-bio__description Ба-дум тссс! - портфолио

							+social_links("welcome")

						ul.page-links
							- var pages = {"Мои работы" : "works.html", "Обо мне" : "#", "Блог" : "#"}
							each p_url, p_name in pages
								li.page-links__item
									a(class="page-links__link" href=p_url)= p_name

					.flip-card__back-side
						form.login-form(type="POST" action="/")
							h2.sidestripes Авторизуйтесь
							+input_iconed([["user", "Логин", "text"], ["key", "Пароль", "password"]])
							+input_checkers([["checkbox", "robot_check", "not a robot", "Я человек"]])
							p.login-form__plain-text Вы точно не робот?
							+input_checkers([["radio", "robot_radio", "shure", "Да"], ["radio", "robot_radio", "who knows", "Не уверен"]])

						ul.page-links
							- var buttons = {"На главную" : "unflip-card", "Войти" : "log-me"}
							each b_action, b_name in buttons
								li.page-links__item
									button(class="page-links__link", id=b_action)= b_name

		footer.footer.footer_welcome
			.container
				span.copyright &copy; Лембинен Николай
				span.copyright(class="copyright_slogan") To boldly go where no man has gone before
				span.copyright(class="copyright_year") 2016