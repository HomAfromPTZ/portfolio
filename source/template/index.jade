include common/_mixins
doctype html
html(lang="ru")
	include common/_head
	body.table-box
		include common/_preloader
		include common/_popup

		<!--[if lt IE 7]>
		<p class="browsehappy">Вы используете <strong>устаревший</strong> браузер. Пожалуйста <a href="http://browsehappy.com/">обновите его</a></p>
		<![endif]-->

		+parallax

		header.welcome-header.table-box__row
			.container.container_padded
				button.welcome-header__button#flip-card Авторизоваться

		.table-box__row.table-box__row_fullheight
			.table-box__vertical-aligned
				h1.hero-heading За голову ок
				.flip-card
					.flip-card__front-side
						.author-bio
							+avatar("avatar_sq.jpg", "Frontend. Wordpress. Разработка сайтов под ключ.", "Лембинен Николай")
							p.author-bio__name Лембинен Николай
							p.author-bio__description Ба-дум тссс! - портфолио

							+social_links("welcome")

						ul.form-buttons
							- var pages = {"Мои работы" : "works.html", "Обо мне" : "about.html", "Блог" : "blog.html"}
							each p_url, p_name in pages
								li.form-buttons__button
									a(class="preload-link form-buttons__button-content" href=p_url)= p_name

					.flip-card__back-side
						form#login
							.login-form
								h3.sidestripes Авторизуйтесь
								+input_iconed([["user", "Логин", "text", "username"], ["key", "Пароль", "password", "password"]])
								+input_checkers([["checkbox", "robot_check", "not a robot", "Я человек"]])
								p.login-form__plain-text Вы точно не робот?
								+input_checkers([["radio", "robot_radio", "shure", "Да"], ["radio", "robot_radio", "who knows", "Не уверен"]])

							ul.form-buttons
								- var buttons = {"На главную" : "unflip-card", "Войти" : "log-me"}
								each b_action, b_name in buttons
									li.form-buttons__button.form-buttons__button_even
										button(class="form-buttons__button-content", id=b_action)= b_name

		footer.welcome-footer.table-box__row
			.container.container_padded
				span.copyright &copy; Лембинен Николай
				span.copyright.copyright_slogan To boldly go where no man has gone before
				span.copyright 2016

		include common/_footer-scripts