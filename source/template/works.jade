include common/_mixins
doctype html
html
	include common/_head
	body
		<!--[if lt IE 7]>
		<p class="browsehappy">Вы используете <strong>устаревший</strong> браузер. Пожалуйста <a href="http://browsehappy.com/">обновите его</a></p>
		<![endif]-->

		include common/_sprites
		.preloader

		include common/_parallax
		+main-menu(1)

		header.header.table-box.fullheight.fullheight_mih
			.table-box__top
				+header-top
			.table-box__middle
				.vertical-aligned
					.site-author
						+avatar("me.jpg", "Frontend. Wordpress. Разработка сайтов под ключ.", "Лембинен Николай")
						p.site-author__name Лембинен Николай
						p.site-author__desctiption Еще одна страничка

					svg.header__svg-bg
						use(xlink:href="#icon-portfolio_header")
					button.go-down.fa.fa-chevron-down

					svg(preserveAspectRatio="none" viewBox="0 0 2032 360.368").header__svg-corner
						use(xlink:href="#icon-bg")
			.table-box__bottom
				.header__title
					+svg-heading("Мои работы", "icon-works_header")


		section.portfolio-slider
			.portfolio-slider__module.portfolio-slider__preview-container
				.portfolio-previews
					.portfolio-previews__preview
						img(src="/assets/img/works/bringcar.png", alt="Bringcar")
					.portfolio-previews__preview
						img(src="/assets/img/works/unspoken.png", alt="Bringcar")

			.portfolio-slider__module.portfolio-slider__projects-container
				.portfolio-projects
					.project
						h3.sidestripes.project__title Сайт транспортной компании bringcar.ru
						p.project__tech html, bootstrap, sass, jquery
						a(href="#").project__link Посмотреть сайт

			.portfolio-slider__module.portfolio-slider__navigation-container
				.navigation-box.navigation-box_prev
					button.portfolio-button.portfolio-button_prev
						.fa.fa-chevron-down
					.portfolio-thumbnails
						.portfolio-thumbnails__thumbnail
							img(src="/assets/img/works/alpha.png", alt="Alpha Capital Education")
				.navigation-box.navigation-box_next
					button.portfolio-button.portfolio-button_next
						.fa.fa-chevron-up
					.portfolio-thumbnails
						.portfolio-thumbnails__thumbnail
							img(src="/assets/img/works/karakalpakiya.png", alt="Karakalpakiya")



		section.talks
			h2.sidestripes Что обо мне говорят
			.container.container_slim.clearfix
				.column.column_half
					.testimonial
						p.testimonial__text Этот парень был одним из тех, кто просто хочет спать
						.testimonial__author
							+avatar("dima.png", "Сооснователь школы LoftSchool", "Ковальчук Дмитрий")
							p.name Ковальчук Дмитрий
							p.description сооснователь LoftSchool

				.column.column_half
					.testimonial
						p.testimonial__text Этот парень был одним из тех, кто просто хочет спать
						.testimonial__author
							+avatar("zar.png", "Сооснователь школы LoftSchool", "Зар Захаров")
							p.name Зар Захаров
							p.description сооснователь LoftSchool

			.contact-form
			button.go-up.fa.fa-chevron-up

		footer.footer
			include common/_footer
